# Django Settings
SECRET_KEY=your-django-secret-key-here-change-this-to-random-string
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# SSO Configuration
SSO_BASE_URL=https://sso.barge2rail.com
SSO_CLIENT_ID=app_your_client_id_here
SSO_CLIENT_SECRET=your_client_secret_here
SSO_REDIRECT_URI=http://localhost:8001/auth/callback/
SSO_SCOPES=openid email profile

# Debug Logging Control (optional - default: False)
# Enable detailed authentication flow logging for troubleshooting
# WARNING: Generates 67 debug logs per login - use only when debugging auth issues
DEBUG_AUTH_FLOW=False

# Database (optional - Django defaults to sqlite)
DATABASE_URL=sqlite:///db.sqlite3

# AWS S3 Storage Configuration (Production)
# Set USE_S3=True to enable S3 storage for BOL PDFs
USE_S3=False
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_STORAGE_BUCKET_NAME=primetrade-documents
AWS_S3_REGION_NAME=us-east-2

# Sentry Error Monitoring (Optional)
# SENTRY_DSN: Sentry project DSN for error monitoring
# Get from: https://sentry.io/settings/your-org/projects/your-project/keys/
# Leave empty to disable Sentry
SENTRY_DSN=https://your-key@sentry.io/your-project-id

# ENVIRONMENT: Deployment environment identifier (development, staging, production)
# Used to distinguish errors in Sentry dashboard
ENVIRONMENT=production
